<section class="my-activities activities">
  <div class="profile-container">
    <div class="profile-list">
      <h1 class="list-title">
        My trips
      </h1>
    </div>
    <div class="trips-list">
      {{#each user.trips}}
      <div class="each-trip activities" activity="{{../activity._id}}" trip="{{this._id}}">
        <p class="activity-text activity-title">{{this.name}}</p>
        <p class="activity-text activity-location">{{this.location}}</p>
        <p class="activity-text">{{this.currentBudget}}/{{this.budget}}â‚¬</p>
        <img src="../images/ironhack.png" alt="" class="activity-img">
        <form action="/trips/{{this._id}}/add-delete-this/{{../activity._id}}" method="post">
          <div>
            <button class="btn-trip" type="submit">Add to this trip</button>
          </div>
        </form>
        <br>
        <hr>
        <br>
      </div>
      {{/each}}
    </div>
  </div>
</section>
<script src="/javascript/activityAdded.js"></script>