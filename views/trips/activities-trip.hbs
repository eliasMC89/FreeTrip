<section class="list-activities activities">
  <h1>
    Add some activities!
  </h1>
  {{#each activities}}

    <h2 class="activity-text activity-title">{{this.name}}</h2>
    <p class="activity-text activity-location">{{this.city}}</p>
    <img src="{{this.photoURL}}" alt="image" class="activity-img">
    <div class="activity-info-container">
      <div class="activity-text-container">
        <p class="activity-text">{{this.type}}</p>
        <p class="activity-text">{{this.price}}â‚¬</p>
      </div>
      {{#if this.addedFavourite}}
    <div class="star-container">
      <a type="submit" class="favourite-btn add-favourite yellow-star" activity={{this.id}}></a>
    </div>
    {{else}}
    <div class="star-container">
      <a type="submit" class="favourite-btn add-favourite" activity={{this.id}}></a>
    </div>
    {{/if}}
    </div>
        
    <form action="/trips/{{../tripId}}/addActivity/{{this._id}}" method="post">
      <div>
        <button type="submit">Add to trip</button>
      </div>
    </form>
    
    <hr>
    
    

  {{/each}}
</section>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/javascript/favourites.js"></script>
<script src="/javascript/addToTrip.js"></script>
    