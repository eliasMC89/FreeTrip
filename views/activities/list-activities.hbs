<section class="list-activities activities">
  <h1 class="list-activities-title">
    Explore Activities
  </h1>
  {{#each activities}}
  <h2 class="activity-text activity-title">{{this.name}}</h2>
  <p class="activity-text activity-location">{{this.city}}</p>
  <a href="/activities/{{this._id}}/details"><img src="../images/ironhack.png" alt="" class="activity-img"></a>
  <div class="activity-info-container">
    <div class="activity-text-container">
      <p class="activity-text">{{this.type}}</p>
      <p class="activity-text">{{this.price}}â‚¬</p>
    </div>
    {{#if this.addedFavourite}}
    <div>
      <a type="submit" class="favourite-btn add-favourite yellow-star" activity={{this.id}}><img src="../../images/star.svg" alt=""
          class="activity-bookmark details"></a>
    </div>
    {{else}}
    <div>
      <a type="submit" class="favourite-btn add-favourite" activity={{this.id}}><img src="../../images/star.svg" alt=""
          class="activity-bookmark details"></a>
    </div>
    {{/if}}
  </div>
  {{#each ../user.trips}}
  <form action="/trips/{{this._id}}/addActivity/{{../this._id}}" method="post">
    <div>
      <button type="submit">{{this.name}}</button>
    </div>
    <!--<select name="type" class="add-to-trip" placeholder="Add to existing trip">
      <option disabled selected>Add to trip</option>
      <option class="add-trip-value" value="{{this}}">{{this}}</option>
    </select>-->
  </form>
  {{/each}}



  <br>
  <hr>
  <br>
  {{/each}}

</section>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/javascript/favourites.js"></script>
<script src="/javascript/addToTrip.js"></script>