<section class="trip-details-container">
  <div class="activity-details">
    <img src="{{activity.photoURL}}" alt="" class="activity-img">
    <div class="activity-bar">
      <div class="activity-titles-container">
        <h2 class="activity-text activity-title">{{activity.name}}</h2>
        <p class="activity-text activity-location">{{activity.city}}</p>
      </div>
      {{#if activity.addedFavourite}}
    <div class="star-container star-details">
      <a type="submit" class="favourite-btn add-favourite yellow-star" activity={{activity.id}}></a>
    </div>
    {{else}}
    <div class="star-container">
      <a type="submit" class="favourite-btn add-favourite" activity={{activity.id}}></a>
    </div>
    {{/if}}
    </div>
    <p class="activity-text activity-owner">Created by: <a href="/profile/{{activity.owner._id}}/info"><span class="owner-name">{{activity.owner.username}}</span></a></p>
